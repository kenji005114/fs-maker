{
  "name": "furigana-maker",
  "displayName": "Furigana Maker",
  "version": "1.1.0",
  "type": "module",
  "private": true,
  "description": "Add furigana to Japanese text for any web page.",
  "license": "MIT",
  "author": "aiktb <hey@aiktb.dev>",
  "engines": {
    "node": ">=20.0.0"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aiktb/FuriganaMaker.git"
  },
  "bugs": {
    "url": "https://github.com/aiktb/FuriganaMaker/issues"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "svgo": "2.8.0",
        "node-fetch": "3.3.1"
      }
    },
    "allowedDeprecatedVersions": {
      "har-validator": "5.1.5",
      "request": "2.88.2",
      "stable": "0.1.8",
      "uuid": "3.4.0"
    }
  },
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "debug": "plasmo dev --verbose",
    "debug:firefox": "plasmo dev --target=firefox-mv2 --verbose",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "start": "web-ext run --source-dir ./build/chrome-mv3-dev -t chromium --start-url chrome://newtab",
    "start:firefox": "web-ext run --source-dir ./build/firefox-mv2-dev",
    "package": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv2",
    "test": "vitest",
    "prepare": "husky install",
    "format": "prettier --check --write .",
    "lint": "eslint --fix .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@headlessui/tailwindcss": "^0.2.0",
    "@iconify/react": "^4.1.1",
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/storage": "^1.9.0",
    "@sglkc/kuromoji": "^1.1.0",
    "@tailwindcss/forms": "^0.5.7",
    "detect-browser": "^5.3.0",
    "file-saver": "^2.0.5",
    "plasmo": "^0.84.0",
    "react": "18.3.0-canary-c5b937576-20231219",
    "react-dom": "18.3.0-canary-c5b937576-20231219",
    "tailwindcss": "^3.4.0",
    "tinycolor2": "^1.6.0",
    "wanakana": "^5.3.1",
    "webextension-polyfill": "^0.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/chrome": "^0.0.243",
    "@types/file-saver": "^2.0.7",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/tinycolor2": "^1.4.6",
    "@types/wanakana": "^4.0.6",
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "globals": "^13.24.0",
    "husky": "^8.0.3",
    "kuromojin": "^3.0.0",
    "lint-staged": "^14.0.1",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "typescript": "^5.3.3",
    "vitest": "^0.34.6",
    "web-ext": "^7.9.0"
  },
  "manifest": {
    "permissions": [
      "contextMenus"
    ],
    "commands": {
      "addFurigana": {
        "description": "Add furigana on the current page"
      },
      "toggleAutoMode": {
        "description": "Toggle auto mode on all pages"
      },
      "toggleKanjiFilter": {
        "description": "Toggle kanji filter on all pages"
      },
      "hideFurigana": {
        "description": "Hide furigana on all pages"
      },
      "showFurigana": {
        "description": "Show furigana on all pages"
      },
      "openHoverMode": {
        "description": "Open hover gap mode on all pages"
      },
      "openHoverNoGapMode": {
        "description": "Open hover no-gap mode on all pages"
      }
    },
    "web_accessible_resources": [
      {
        "resources": [
          "assets/dicts/*.dat.gz"
        ],
        "matches": [
          "https://*/*"
        ]
      }
    ]
  }
}
