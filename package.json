{
  "name": "furigana-maker",
  "displayName": "Furigana Maker",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Add Furigana to Japanese text for any web page.",
  "license": "MIT",
  "author": "aiktb <hey@aiktb.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aiktb/FuriganaMaker.git"
  },
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "package": "plasmo package",
    "debug": "plasmo dev --verbose",
    "test": "jest",
    "prepare": "husky install",
    "format": "prettier --check --write .",
    "lint": "tsc --noEmit --incremental false"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/storage": "^1.7.2",
    "@vueuse/components": "^10.4.1",
    "@vueuse/core": "^10.4.1",
    "plasmo": "^0.82.1",
    "tinycolor2": "^1.6.0",
    "typescript": "^5.2.2",
    "vue": "^3.3.4",
    "wanakana": "^5.1.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/chrome": "^0.0.243",
    "@types/jest": "^29.5.4",
    "@types/tinycolor2": "^1.4.3",
    "@types/wanakana": "^4.0.3",
    "husky": "^8.0.3",
    "kuromojin": "^3.0.0",
    "prettier": "^3.0.2",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.1.1"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "contextMenus"
    ],
    "commands": {
      "addFurigana": {
        "suggested_key": {
          "default": "Alt+Shift+A"
        },
        "description": "Add furigana on the current page."
      },
      "switchDisplay": {
        "suggested_key": {
          "default": "Alt+Shift+H"
        },
        "description": "Hide furigana on all pages."
      },
      "_execute_action": {
        "suggested_key": {
          "default": "Alt+Shift+X"
        }
      }
    }
  }
}
