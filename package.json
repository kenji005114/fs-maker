{
  "name": "furigana-maker",
  "displayName": "Furigana Maker",
  "description": "Add furigana to Japanese text on any page for learning kanji pronunciation.",
  "version": "1.5.1",
  "type": "module",
  "packageManager": "pnpm@9.4.0",
  "private": true,
  "license": "MIT",
  "author": "aiktb <hey@aiktb.dev>",
  "homepage": "https://furiganamaker.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aiktb/FuriganaMaker.git"
  },
  "bugs": {
    "url": "https://github.com/aiktb/FuriganaMaker/issues"
  },
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "debug": "plasmo dev --verbose",
    "debug:firefox": "plasmo dev --target=firefox-mv2 --verbose",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "start": "web-ext run --source-dir ./build/chrome-mv3-dev -t chromium --start-url chrome://newtab",
    "start:firefox": "web-ext run --source-dir ./build/firefox-mv2-dev",
    "package": "pnpm run build --zip",
    "package:firefox": "pnpm run build:firefox --zip",
    "prepare": "husky",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "typecheck": "tsc",
    "test": "vitest"
  },
  "dependencies": {
    "@ctrl/tinycolor": "^4.1.0",
    "@floating-ui/react": "^0.26.17",
    "@headlessui/react": "^2.0.4",
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.10.0",
    "@sglkc/kuromoji": "^1.1.0",
    "detect-browser": "^5.3.0",
    "file-saver": "^2.0.5",
    "plasmo": "^0.87.2",
    "react": "18.3.0-canary-c5b937576-20231219",
    "react-dom": "18.3.0-canary-c5b937576-20231219",
    "react-share": "^5.1.0",
    "wanakana": "^5.3.1",
    "webextension-polyfill": "^0.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/types": "^19.0.3",
    "@egoist/tailwindcss-icons": "^1.8.1",
    "@headlessui/tailwindcss": "^0.2.1",
    "@iconify/json": "^2.2.219",
    "@tailwindcss/forms": "^0.5.7",
    "@types/file-saver": "^2.0.7",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/webextension-polyfill": "^0.10.7",
    "autoprefixer": "^10.4.19",
    "husky": "^9.0.11",
    "kuromojin": "^3.0.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "web-ext": "^8.1.0"
  },
  "manifest": {
    "permissions": ["contextMenus"],
    "commands": {
      "addFurigana": {
        "description": "Add furigana on the current page"
      },
      "toggleAutoMode": {
        "description": "Toggle auto mode on all pages"
      },
      "toggleKanjiFilter": {
        "description": "Toggle kanji filter on all pages"
      },
      "toggleFuriganaDisplay": {
        "description": "Toggle furigana display mode on all pages"
      }
    },
    "web_accessible_resources": [
      {
        "resources": [
          "@sglkc/kuromoji/dict/base.dat.gz",
          "@sglkc/kuromoji/dict/cc.dat.gz",
          "@sglkc/kuromoji/dict/check.dat.gz",
          "@sglkc/kuromoji/dict/tid.dat.gz",
          "@sglkc/kuromoji/dict/tid_map.dat.gz",
          "@sglkc/kuromoji/dict/tid_pos.dat.gz",
          "@sglkc/kuromoji/dict/unk_char.dat.gz",
          "@sglkc/kuromoji/dict/unk_compat.dat.gz",
          "@sglkc/kuromoji/dict/unk.dat.gz",
          "@sglkc/kuromoji/dict/unk_invoke.dat.gz",
          "@sglkc/kuromoji/dict/unk_map.dat.gz",
          "@sglkc/kuromoji/dict/unk_pos.dat.gz"
        ],
        "matches": ["https://*/*"]
      }
    ]
  }
}
