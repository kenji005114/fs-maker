{
  "name": "furigana-maker",
  "displayName": "Furigana Maker",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Add furigana to Japanese text for any web page.",
  "license": "MIT",
  "author": "aiktb <hey@aiktb.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aiktb/FuriganaMaker.git"
  },
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv2",
    "debug": "plasmo dev --verbose",
    "debug:firefox": "plasmo dev --target=firefox-mv2 --verbose",
    "build": "plasmo build",
    "build:firefox": "plasmo build --target=firefox-mv2",
    "start": "web-ext run --source-dir ./build/chrome-mv3-dev -t chromium",
    "start:firefox": "web-ext run --source-dir ./build/firefox-mv2-dev",
    "package": "plasmo package",
    "package:firefox": "plasmo package --target=firefox-mv2",
    "test": "jest",
    "prepare": "husky install",
    "format": "prettier --check --write .",
    "lint": "tsc --noEmit --incremental false"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.5.0",
    "@plasmohq/storage": "^1.8.0",
    "@sglkc/kuromoji": "^1.0.1",
    "@vueuse/core": "^10.4.1",
    "detect-browser": "^5.3.0",
    "plasmo": "^0.83.0",
    "tinycolor2": "^1.6.0",
    "typescript": "^5.2.2",
    "vue": "^3.3.4",
    "wanakana": "^5.1.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.0",
    "@types/chrome": "^0.0.243",
    "@types/jest": "^29.5.4",
    "@types/tinycolor2": "^1.4.4",
    "@types/wanakana": "^4.0.3",
    "@types/webextension-polyfill": "^0.10.2",
    "husky": "^8.0.3",
    "kuromojin": "^3.0.0",
    "prettier": "^3.0.3",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^29.1.1",
    "web-ext": "^7.7.0"
  },
  "manifest": {
    "permissions": [
      "contextMenus",
      "activeTab"
    ],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Alt+Shift+X"
        }
      },
      "addFurigana": {
        "suggested_key": {
          "default": "Alt+Shift+F"
        },
        "description": "Add furigana on the current page"
      },
      "switchDisplay": {
        "description": "Switch furigana display on all pages"
      },
      "openHoverMode": {
        "description": "Turn on hover mode on all pages"
      }
    },
    "web_accessible_resources": [
      {
        "resources": [
          "assets/dict/*.dat.gz"
        ],
        "matches": [
          "https://*/*"
        ]
      }
    ]
  }
}
